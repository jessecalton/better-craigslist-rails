<h1>These are the relevant posts for <%=@category.name%>:</h1>

<%= link_to 'New post', new_category_post_path(@category) %>
<% if !@category.posts.empty? %>
  <table>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>

    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.author %></td>
        <td><%= post.body %></td>
        <td><%= link_to 'Show', post_path(post) %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post_path(post),
                method: :delete,
                data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </table>
<% else %>
  <p>There are no posts for this category. Sad Panda.</p>
<% end %>
<%= link_to 'Back', categories_path %>
